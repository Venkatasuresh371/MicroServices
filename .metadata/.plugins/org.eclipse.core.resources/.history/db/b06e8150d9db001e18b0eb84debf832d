package com.org.customerservice.service.impl;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.BeanUtils;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.org.customerservice.model.Customer;
import com.org.customerservice.model.Order;
import com.org.customerservice.repository.CustomerRepository;
import com.org.customerservice.request.CustomerRequest;
import com.org.customerservice.request.OrderRequest;
import com.org.customerservice.response.CustomerResponse;
import com.org.customerservice.response.OrderResponse;
import com.org.customerservice.service.CustomerService;

@Service
public class CustomerServiceImpl implements CustomerService 
{
	@Autowired
	private CustomerRepository customerRepo;
	

	@Override
	public CustomerResponse saveCustomer(CustomerRequest customerRequest) 
	{
		Customer customer = constructCustomer(customerRequest);
		Customer savedCustomer = customerRepo.save(customer);
		CustomerResponse customerResponse = constructCustomerResponse(savedCustomer);
		
		//BeanUtils.copyProperties(savedCustomer, customerResponse);
		return customerResponse;
	}

	private CustomerResponse constructCustomerResponse(Customer savedCustomer) {
		CustomerResponse customerResponse = new CustomerResponse();
		customerResponse.setCid(savedCustomer.getCid());
		customerResponse.setcName(savedCustomer.getcName());
		customerResponse.setContactNo(savedCustomer.getContactNo());
		
		List<OrderResponse> list = new ArrayList<OrderResponse>();
		for(Order order : savedCustomer.getOrders()) {
			OrderResponse orderResponse = new OrderResponse();
			orderResponse.setcId(order.getOrderId());
			orderResponse.setoDetails(order.getDetails());
			orderResponse.setPrice(order.getPrice());
			list.add(orderResponse);
		}
		customerResponse.setOrders(list);
		// TODO Auto-generated method stub
		return customerResponse;
	}

	private Customer constructCustomer(CustomerRequest customerRequest) {
		Customer customer = new Customer();
		customer.setcName(customerRequest.getcName());
		customer.setContactNo(customerRequest.getConatactNo());

		List<Order> orderList = new ArrayList<Order>();
		System.out.println("orderList::::" + orderList.size());
		
		for (OrderRequest o : customerRequest.getOrders()) {
			Order order = new Order();
			order.setDetails(o.getDetails());
			order.setPrice(o.getPrice());
			orderList.add(order);
		}
		
		customer.setOrders(orderList);
		return customer;
	}

	@Override
	public CustomerResponse getCustomer(int cid) 
	{
		Customer customer = customerRepo.findById(cid).get();
		CustomerResponse customerResponse = new CustomerResponse();
		BeanUtils.copyProperties(customer, customerResponse);
		return customerResponse;
	}

	@Override
	public String deleteCustomer(int cid) 
	{
		Customer customer = customerRepo.findById(cid).get();
		customerRepo.delete(customer);
		return "Customer Deleted Successfully";
	}
}
